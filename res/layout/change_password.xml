<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_s20" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="Password Setting:"
                android:textColor="#010101"
                android:textSize="20px"
                android:textStyle="bold" >
            </TextView>

            <EditText
                android:id="@+id/old_password"
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:background="@drawable/input_box_s2"
                android:hint="Enter Old Password"
                android:paddingLeft="7px"
                android:password="true"
                android:singleLine="true"
                android:textSize="20px" >
            </EditText>

            <EditText
                android:id="@+id/new_password"
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:background="@drawable/input_box_s2"
                android:hint="Enter New Password"
                android:paddingLeft="7px"
                android:password="true"
                android:singleLine="true"
                android:textSize="20px" >
            </EditText>

            <EditText
                android:id="@+id/re_new_password"
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:background="@drawable/input_box_s2"
                android:hint="Re-enter New Password"
                android:paddingLeft="7px"
                android:password="true"
                android:singleLine="true"
                android:textSize="20px" >
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25px"
                    android:background="@layout/btn_submit" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/btn_cancel" >
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>